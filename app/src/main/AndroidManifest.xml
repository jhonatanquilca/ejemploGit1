<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.workstation.ejemplogit1">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.workstation.ejemplogit1.ui.actividades.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--actividad Actualizar-->
        <activity
            android:name=".ui.actividades.UpdateActivity"
            android:label="@string/title_activity_update"
            android:parentActivityName=".ui.actividades.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.actividades.DetailActivity" />
        </activity>
        <!--actividad detalle-->
        <activity
            android:name=".ui.actividades.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".ui.actividades.MainActivity"
            android:theme="@style/AppTheme.Detail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.workstation.ejemplogit1.ui.actividades.MainActivity" />
        </activity>
        <!--actividad Insertar-->
        <activity
            android:name=".ui.actividades.InsertActivity"
            android:label="@string/title_activity_insert"
            android:parentActivityName=".ui.actividades.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.workstation.ejemplogit1.ui.actividades.MainActivity" />
        </activity>

    </application>

</manifest>
